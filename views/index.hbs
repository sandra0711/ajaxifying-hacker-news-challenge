<header>
    <h1>Hacker News</h1>
    <p>
        <a href="#posts">new</a>
        <a href="#">comments</a>
        <a href="#">popular</a>
        <a href="#">login</a>
    </p>
</header>


<div class='post-container'>
    {{#each posts}}
    <article id="{{this._id}}">
        <form method="post" action='/posts/{{this._id}}/vote' class="inline">
            <button type="submit" name="submit_param" value="submit_value" class="fa fa-sort-desc vote-button upvote-button"></button>
        </form>
        <h2><a href='/posts/{{this._id}}'>{{this.title}}</a></h2>
        <p>
            <span class='points'>{{this.points}}</span>
            <span class='username'>{{this.username}}</span>
            <span class='timestamp'>{{this.timeSinceCreation}}</span>
            <span class='comment-count'>{{ this.commentCount}}</span>
            <a class="delete" href='/posts/{{this.id}}'></a>
        </p>
    </article>
    {{/each}}
</div>

<form id="posts" method="post" action="/posts">
    <input type="text" name="title" placeholder="title">
    <input type="submit" value="submit new post">
</form>
